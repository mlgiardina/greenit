<h3><%= @user.name%> </h3>
<hr>
<h4>links</h4>
<ul>
  <% @user.links.each do |link| %>
    <li><%= link_to link.body, link %> | comments: <%= link.comments.count %> | greenits: <%= link.votes.count %> | reddits <%= link.downvotes.count %> </li>
  <% end %>
</ul>
<hr>
<h4>comments by <%= @user.name %></h4>
<ul>
  <% @user.comments.each do |comment| %>
    <li><%= link_to comment.body, { controller: "links", action: "show", id: comment.link_id } %> | greenits: <%= comment.votes.count %> | reddits: <%= comment.downvotes.count %> </li>
  <% end %>
</ul>
<hr>
<h4>greened links</h4>
<ul>
  <% @user.votes.each do |vote| %>
    <% if vote.link_id %>
      <li><%= link_to Link.find(vote.link_id).body, vote.link %> </li>
    <% end %>
  <% end %>
</ul>
<hr>
<h4>redded links</h4>
<ul>
  <% @user.downvotes.each do |downvote| %>
  <% if downvote.link_id %>
    <li><%= link_to Link.find(downvote.link_id).body, downvote.link %> </li>
  <% end %>
<% end %>
</ul>
<hr>
<h4>greened comments</h4>
<ul>
  <% @user.votes.each do |vote| %>
    <% if vote.comment_id %>
      <li><%= link_to Link.find(vote.comment.link_id).body, { controller: "links", action: "show", id: vote.comment.link_id } %> </li>
    <% end %>
  <% end %>
</ul>
<hr>
<h4>redded comments</h4>
<ul>
  <% @user.downvotes.each do |downvote| %>
  <% if downvote.comment %>
    <li><%= link_to Link.find(downvote.comment.link_id).body, { controller: "links", action: "show", id: downvote.comment.link_id } %> </li>
  <% end %>
<% end %>
</ul>
