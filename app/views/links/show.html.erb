<article>
  <p><%= @link.body %></p>
  <small> <%= @link.board.name %> </small>
  <small> <%= @link.user.name %> </small>
  <p>upvotes: <%= @link.votes.count %> </p>
  <p>downvotes: <%= @link.downvotes.count %> </p>
  <footer>
    <div class="actions">
      <%= link_to 'All Links',links_path %>
      <% if @link.user_id == session[:user_id] %>
        <%= link_to "Edit", edit_link_path(@link) %>
      <% end %>
     </div>
  </footer>
</article>

<section class="comments">
  <h3>Comments (<%= @link.comments.count %>) </h3>
  <hr>
  <ul>
    <% @link.comments.each do |comment| %>
      <li>
        <strong><%= comment.user.name %> </strong>:
        <%= comment.body %>
      </li>
    <% end %>
  </ul>
  <hr>
  <h4>Comment on this</h4>
  <%= form_for(@comment) do |f| %>
    <%= f.hidden_field :link_id, value: @link.id %>
    <%= f.hidden_field :user_id, value: session[:user_id] %>
    <p> <%= f.label :body%> <%= f.text_area :body %> </p>
    <p> <%= f.submit "New Comment" %> </p>
  <% end %>
</section>

