<article>
  <p><%= @link.body %></p>
  <small> by: <%= link_to @link.user.name, @link.user %>
  in
  <%= link_to @link.board.name, @link.board %> </small>
  <%= render 'shared/votes' %>
  <footer>
    <div class="actions">
      <%= link_to 'All Links', links_path %>
      <% if @link.user_id == session[:user_id] %>
        |
        <%= link_to "Edit", edit_link_path(@link) %>
      <% end %>
     </div>
  </footer>
</article>

<section class="comments">
  <h3>Comments (<%= @comments.count %>) </h3>
  <hr>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <strong><%= comment.user.name %> </strong>:
        <%= comment.body %>
        |
    <small><%= link_to "greenit:", { controller: "votes", action: "create", vote: { user_id: session[:user_id], comment_id: comment.id } }, method: "post" %>  <%= comment.votes.count %> </small>
        |
    <small> <%= link_to "reddit:", { controller: "downvotes", action: "create", downvote: { user_id: session[:user_id], comment_id: comment.id } }, method: "post" %> <%= comment.downvotes.count %> </small>
      </li>
    <% end %>
  </ul>
  <hr>
  <h4>Comment on this</h4>
  <%= form_for(@comment) do |f| %>
    <%= f.hidden_field :link_id, value: @link.id %>
    <%= f.hidden_field :user_id, value: session[:user_id] %>
    <p> <%= f.label :body%> <%= f.text_area :body %> </p>
    <p> <%= f.submit "New Comment" %> </p>
  <% end %>
</section>

