<h2>All Links</h2>

<ul>
  <% @links.each do |link| %>
    <li> <%= link_to link.body, link %>
      <small> <%= link_to link.user.name, link.user, class: "small_username" %>
        |
        <%= link_to link.board.name, link.board, class: "small_board_name" %>
        |
        comments: <%= link.comments.count %>
        |
        <span class="greenits">greenits:</span> <%= link.votes.count %>
        |
        <span class="reddits">reddits:</span> <%= link.downvotes.count class: "reddits" %>
        |
        <% if link.votes.count == 0 && link.downvotes.count == 0 %>
        no votes yet
        <% else %>
          <%= (link.votes.count).percent_of(link.votes.count + link.downvotes.count).round %>% green
        <% end %>
      </small>
    </li>
  <% end %>
</ul>
