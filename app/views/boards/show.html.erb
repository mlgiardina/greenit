<h2> <%= @board.name %> </h2>
<div class="board-links">
  <ul>
    <% @board.links.each do |link| %>
      <li> <%= link_to link.body, link, class: "main-link" %> | comments: <%= link.comments.count %> </li>
    <% end %>
  </ul>
</div>

<h3>Add New Link</h3>
<%= render 'shared/link', locals: { link: @link } %>
